
SELECT [product_name], [categoria]
  FROM [dbo].[products] 
  LEFT JOIN [dbo].[productscategories] ON [dbo].[productscategories].productID = [dbo].[products].productID
  LEFT JOIN [dbo].[categories] ON [dbo].[productscategories].categoriaID = [dbo].[categories].categoriaID

// результат

product_name	categoria
Banana	Fruit
Banana	High_carbs
Water	NULL

// создание и заполнение таблиц

CREATE TABLE dbo.categories (
[categoriaID] int NOT NULL IDENTITY(1, 1) PRIMARY KEY,
[categoria] VARCHAR(30) NOT NULL,
); 

INSERT INTO [dbo].[categories]
           ([categoria])
     VALUES ('Fruit')
           
INSERT INTO [dbo].[categories]
           ([categoria])
     VALUES ('High_carbs')
           
INSERT INTO [dbo].[categories]
           ([categoria])
     VALUES ('Vegetable')
           
CREATE TABLE dbo.products (
[productID] int NOT NULL IDENTITY(1, 1) PRIMARY KEY,
[product_name] VARCHAR(30) NOT NULL
); 

INSERT INTO [dbo].[products]
           ([product_name])
     VALUES
           ('Banana')
           
INSERT INTO [dbo].[products]
           ([product_name])
     VALUES
           ('Water')

CREATE TABLE dbo.productscategories (
[pkID] int NOT NULL IDENTITY(1, 1) PRIMARY KEY,
[productID] int NOT NULL FOREIGN KEY REFERENCES [dbo].[products](productID),
[categoriaID] int NOT NULL FOREIGN KEY REFERENCES [dbo].[categories](categoriaID)
); 

INSERT INTO [dbo].[productscategories]
           ([productID], [categoriaID])
     VALUES ((SELECT [productID] FROM [dbo].[products] WHERE [product_name] = 'Banana'), 
	 (SELECT [categoriaID] FROM [dbo].[categories] WHERE [categoria] = 'Fruit'))
           
INSERT INTO [dbo].[productscategories]
           ([productID], [categoriaID])
     VALUES ((SELECT [productID] FROM [dbo].[products] WHERE [product_name] = 'Banana'), 
	 (SELECT [categoriaID] FROM [dbo].[categories] WHERE [categoria] = 'High_carbs'))
           
