
SELECT [product_name], [categoria]
  FROM [dbo].[products] LEFT JOIN [dbo].[categories] ON [dbo].[products].product_categoria = [dbo].[categories].categoria

// результат

product_name	categoria
Banana	Fruit
Banana	High_carbs
Water	NULL

// создание и заполнение таблиц

CREATE TABLE dbo.categories (
categoria VARCHAR(30) NOT NULL,
PRIMARY KEY (categoria)); 

INSERT INTO [dbo].[categories]
           ([categoria])
     VALUES
           ('Fruit')
           
INSERT INTO [dbo].[categories]
           ([categoria])
     VALUES
           ('High_carbs')
           
INSERT INTO [dbo].[categories]
           ([categoria])
     VALUES
           ('Vegetable')
           
CREATE TABLE dbo.products (
[id] int NOT NULL IDENTITY(1, 1) PRIMARY KEY,
product_name VARCHAR(30) NOT NULL,
product_categoria VARCHAR(30) NULL REFERENCES dbo.categories(categoria)
); 

INSERT INTO [dbo].[products]
           ([product_name]
           ,[product_categoria])
     VALUES
           ('Banana',
